<UserControl x:Class="DriveStorage.customcontrols.MediumCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DriveStorage.customcontrols"
             mc:Ignorable="d" x:Name="this">
    <Border CornerRadius="20" Width="120" Height="120" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--File Icon-->
            <Path Data="{Binding ElementName=this, FileIcon}" F>
                
            </Path>
        </Grid>
    </Border>
    
</UserControl>
