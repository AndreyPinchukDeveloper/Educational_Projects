<Window x:Class="FileExplorerMVVM.Views.Windows.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorerMVVM.Views.Windows"
        mc:Ignorable="d"
        Title="RenameDialog" Height="80" Width="270"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Transparent"
        Name="renameDialog">
    <Border
        BorderThickness="1"
        BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid Background="Silver" 
                  Opacity=".3"/>

            <TextBlock Text="OldFolderName"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="10 0"/>

            <Button x:Name="CloseButton"
                    Content="&#xE888;"
                    FontFamily="{StaticResource 'Segoe MDL2 Assets'}"
                    />
        </Grid>
    </Border>
</Window>
