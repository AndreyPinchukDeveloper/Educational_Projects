<Application x:Class="FileExplorerMVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FileExplorerMVVM">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Views/Resources/Styles/Icons.xaml"/>
                <ResourceDictionary Source="Views/Resources/Styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="Views/Resources/Styles/ListView.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DropShadowEffect
                x:Key="DropShadowEffect"
                BlurRadius="4"
                ShadowDepth="0"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
