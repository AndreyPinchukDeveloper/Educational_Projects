<Window x:Class="CustomControllersPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomControllersPractice"
        xmlns:custom="clr-namespace:CustomControllersPractice.CustomControls"
        mc:Ignorable="d"
        Title="Analog Clock" Height="450" Width="800">

    <StackPanel HorizontalAlignment="Center">
        <custom:AnalogClock ShowSeconds="True"/>

        <TextBlock x:Name="CurrentTime" 
                   Text="{Binding CurrentText}"                   
                   Margin="10"
                   FontSize="50"/>
    </StackPanel>
</Window>
